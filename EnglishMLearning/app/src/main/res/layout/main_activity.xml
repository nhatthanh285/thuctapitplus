<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTudien"
            android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp"
            android:src="@drawable/tudien"
            android:layout_marginBottom="58dp"
            android:layout_above="@+id/btnAudio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAudio"
            android:src="@drawable/audio"
            android:layout_marginBottom="44dp"
            android:layout_above="@+id/btnThi"
            android:layout_alignLeft="@+id/btnTudien"
            android:layout_alignStart="@+id/btnTudien" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNguphap"
            android:src="@drawable/nguphap"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_alignTop="@+id/btnTudien"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTrogiup"
            android:src="@drawable/trogiup"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/btnvideo"
            android:layout_alignStart="@+id/btnvideo"
            android:layout_marginBottom="28dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThi"
            android:src="@drawable/thitracnghiem"
            android:layout_alignTop="@+id/btnTrogiup"
            android:layout_alignLeft="@+id/btnAudio"
            android:layout_alignStart="@+id/btnAudio" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnvideo"
            android:src="@drawable/video"
            android:layout_alignTop="@+id/btnAudio"
            android:layout_alignLeft="@+id/btnNguphap"
            android:layout_alignStart="@+id/btnNguphap" />

    </RelativeLayout>

    <ListView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"></ListView>
</android.support.v4.widget.DrawerLayout>